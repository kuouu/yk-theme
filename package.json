{
  "scripts": {
    "start": "npm-run-all --parallel wpstart tailwindwatch",
    "build": "npm-run-all --sequential wpbuild tailwindbuild",
    "wpstart": "wp-scripts start",
    "wpbuild": "wp-scripts build",
    "tailwindwatch": "tailwindcss -i ./tailwind.css -o ./build/index.css -w",
    "tailwindbuild": "tailwindcss build -i ./tailwind.css -o ./build/index.css --minify"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@tailwindcss/typography": "^0.5.13",
    "@wordpress/dom-ready": "^3.57.0",
    "@wordpress/element": "^5.34.0",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.2.0",
    "tailwindcss": "^3.4.3",
    "ts-loader": "^9.5.1"
  },
  "devDependencies": {
    "@wordpress/scripts": "^27.8.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  }
}
